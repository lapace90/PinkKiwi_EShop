{% extends 'emails/base.html.twig' %}

{% block email_title %}New Contact Message - PinkKiwi{% endblock %}

{% block header_title %}📬 New Contact Message{% endblock %}

{% block header_subtitle %}
    <p style="margin: 10px 0 0; opacity: 0.9;">Someone wants to reach you</p>
{% endblock %}

{% block content %}
    <p>A new message has been received from the contact form:</p>

    <div class="box">
        <table style="width: 100%;">
            <tr>
                <td style="width: 30%; font-weight: bold; color: #ff69b4;">Name:</td>
                <td>{{ name }}</td>
            </tr>
            <tr>
                <td style="font-weight: bold; color: #ff69b4;">Email:</td>
                <td><a href="mailto:{{ email }}">{{ email }}</a></td>
            </tr>
            <tr>
                <td style="font-weight: bold; color: #ff69b4;">Subject:</td>
                <td>{{ subject }}</td>
            </tr>
        </table>
    </div>

    <h3 style="color: #ff69b4; margin-top: 30px;">Message:</h3>
    <div class="box" style="background: white; border-left-color: #9370DB;">
        <p style="white-space: pre-line; line-height: 1.8;">{{ message }}</p>
    </div>

    <div style="text-align: center; margin: 30px 0;">
        <a href="mailto:{{ email }}?subject=Re: {{ subject }}" class="button">
            📧 Reply to {{ name }}
        </a>
    </div>

    <p style="color: #666; font-size: 12px; margin-top: 30px;">
        <strong>📅 Received:</strong> {{ 'now'|date('d/m/Y H:i') }}<br>
        <strong>📍 From:</strong> PinkKiwi Contact Form
    </p>
{% endblock %}