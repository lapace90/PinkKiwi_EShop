{% extends 'base.html.twig' %}

{% block title %}Commande {{ order.reference }} - PinkKiwi{% endblock %}

{% block content %}
<div class="order-detail-page">
    {# Bouton retour #}
    <div class="text-end mb-3">
        <a href="{{ path('account_order') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à mes commandes
        </a>
    </div>

    {# Header de la commande #}
    <div class="order-detail-header text-center mb-5">
        <h1 class="display-4 fw-bold section-title mb-3">
            <i class="fas fa-receipt me-3"></i>Commande {{ order.reference }}
        </h1>
        <div class="order-status-badge">
            <span class="badge bg-success">
                <i class="fas fa-check-circle me-2"></i>Payée
            </span>
        </div>
    </div>

    <div class="row">
        {# Colonne gauche - Infos et produits #}
        <div class="col-lg-8 mb-4">
            {# Informations de la commande #}
            <div class="order-detail-card mb-4">
                <h3 class="card-title">
                    <i class="fas fa-info-circle me-2"></i>Informations de commande
                </h3>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-icon">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div>
                                <span class="info-label">Date de commande</span>
                                <span class="info-value">{{ order.createdAt|date('d/m/Y à H:i') }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-icon">
                                <i class="fas fa-hashtag"></i>
                            </div>
                            <div>
                                <span class="info-label">Référence</span>
                                <span class="info-value">{{ order.reference }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Adresse de livraison #}
            <div class="order-detail-card mb-4">
                <h3 class="card-title">
                    <i class="fas fa-map-marker-alt me-2"></i>Adresse de livraison
                </h3>
                <div class="delivery-address">
                    {{ order.delivery | replace({'[br]': '<br>'}) | raw }}
                </div>
            </div>

            {# Transporteur #}
            <div class="order-detail-card mb-4">
                <h3 class="card-title">
                    <i class="fas fa-truck me-2"></i>Mode de livraison
                </h3>
                <div class="carrier-info">
                    <div class="carrier-name">{{ order.carrier.name }}</div>
                    <div class="carrier-description">{{ order.carrier.description }}</div>
                </div>
            </div>

            {# Produits commandés #}
            <div class="order-detail-card">
                <h3 class="card-title">
                    <i class="fas fa-box me-2"></i>Produits commandés ({{ order.orderDetails|length }})
                </h3>
                
                <div class="products-list">
                    {% for item in order.orderDetails %}
                    <div class="product-item">
                        <div class="product-image">
                            <img src="{{ item.product.picture }}" alt="{{ item.product.name }}">
                        </div>
                        <div class="product-info">
                            <h5 class="product-name">{{ item.product.name }}</h5>
                            <p class="product-subtitle">{{ item.product.subtitle }}</p>
                            <div class="product-meta">
                                <span class="quantity">
                                    <i class="fas fa-times me-1"></i>{{ item.quantity }}
                                </span>
                                <span class="unit-price">{{ (item.price / 100)|number_format(2, ',', ' ') }} €</span>
                            </div>
                        </div>
                        <div class="product-total">
                            <div class="total-price">{{ (item.price * item.quantity / 100)|number_format(2, ',', ' ') }} €</div>
                            
                            {# Formulaire d'avis #}
                            <div class="rating-section mt-3">
                                <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#rating-{{ item.id }}">
                                    <i class="fas fa-star me-1"></i>Laisser un avis
                                </button>
                                <div class="collapse mt-2" id="rating-{{ item.id }}">
                                    <form action="{{ path('comment_product', {'slug': item.product.slug}) }}" method="post" class="rating-form">
                                        <div class="star-rating mb-2">
                                            <select name="rating" class="form-select form-select-sm">
                                                <option value="5">⭐⭐⭐⭐⭐ Excellent</option>
                                                <option value="4">⭐⭐⭐⭐ Très bien</option>
                                                <option value="3">⭐⭐⭐ Bien</option>
                                                <option value="2">⭐⭐ Moyen</option>
                                                <option value="1">⭐ Décevant</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary  w-100">
                                            <i class="fas fa-paper-plane me-1"></i>Envoyer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# Colonne droite - Résumé #}
        <div class="col-lg-4">
            <div class="order-summary-detail sticky-top" style="top: 100px;">
                <h3 class="summary-title">
                    <i class="fas fa-file-invoice-dollar me-2"></i>Récapitulatif
                </h3>
                
                <div class="summary-content">
                    <div class="summary-row">
                        <span>Sous-total</span>
                        <span>{{ (order.total / 100)|number_format(2, ',', ' ') }} €</span>
                    </div>
                    <div class="summary-row">
                        <span>Livraison</span>
                        <span>{{ (order.carrier.price / 100)|number_format(2, ',', ' ') }} €</span>
                    </div>
                    <hr class="my-3">
                    <div class="summary-row total-row">
                        <span class="fw-bold">Total</span>
                        <span class="total-amount">{{ ((order.carrier.price + order.total) / 100)|number_format(2, ',', ' ') }} €</span>
                    </div>
                </div>

                <div class="summary-actions mt-4">
                    <a href="{{ path('products') }}" class="btn btn-primary btn-lg w-100 mb-3">
                        <i class="fas fa-shopping-bag me-2"></i>Continuer mes achats
                    </a>
                    <a href="{{ path('account') }}" class="btn btn-outline-secondary btn-lg w-100">
                        <i class="fas fa-user me-2"></i>Mon compte
                    </a>
                </div>

                <div class="help-section mt-4">
                    <div class="help-box">
                        <i class="fas fa-question-circle"></i>
                        <div>
                            <strong>Besoin d'aide?</strong>
                            <p>Contactez notre service client</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}