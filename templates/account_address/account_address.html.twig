{% extends 'base.html.twig' %}

{% block title %}My Addresses - PinkKiwi Boutique{% endblock %}

{% block content %}
<div class="address-page">
    {# Back Button #}
    <div class="text-end mb-3">
        <a href="{{ path('account') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>

    {# Centered Header #}
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold section-title mb-2">
                <i class="fas fa-map-marker-alt me-3"></i>My Addresses
            </h1>
            <p class="lead text-muted">Manage your delivery addresses</p>
        </div>
    </div>

    {# Add Address Button #}
    {% if app.user.addresses|length > 0 %}
    <div class="text-end mb-4">
        <a href="{{ path('add_address') }}" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Add Address
        </a>
    </div>
    {% endif %}

    {# Empty State #}
    {% if app.user.addresses|length == 0 %}
    <div class="empty-addresses">
        <div class="empty-icon">
            <i class="fas fa-map-marked-alt"></i>
        </div>
        <h3>No saved addresses</h3>
        <p class="text-muted mb-4">Add your first delivery address</p>
        <a href="{{ path('add_address') }}" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Add Address
        </a>
    </div>
    {% else %}
    
    {# Address Cards Grid #}
    <div class="row g-4">
        {% for address in app.user.addresses %}
        <div class="col-md-6 col-lg-4">
            <div class="address-card">
                <!-- Badge -->
                <div class="address-badge">
                    <i class="fas fa-home me-2"></i>{{ address.name }}
                </div>
                
                <!-- Content -->
                <div class="address-content">
                    <h5 class="address-title">
                        {{ address.firstName }} {{ address.lastName }}
                    </h5>
                    {% if address.company %}
                    <p class="address-company">
                        <i class="fas fa-building me-2"></i>{{ address.company }}
                    </p>
                    {% endif %}
                    <div class="address-details">
                        <p class="mb-1">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            {{ address.address }}
                        </p>
                        <p class="mb-1">
                            <i class="fas fa-city me-2"></i>
                            {{ address.postal }} - {{ address.city }}
                        </p>
                        <p class="mb-1">
                            <i class="fas fa-globe me-2"></i>
                            {{ address.country }}
                        </p>
                        <p class="mb-0">
                            <i class="fas fa-phone me-2"></i>
                            {{ address.phone }}
                        </p>
                    </div>
                </div>
                
                <!-- Actions -->
                <div class="address-actions">
                    <a href="{{ path('address_edit', {'id': address.id}) }}" class="btn btn-outline-primary">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a href="{{ path('delete_address', {'id': address.id}) }}" 
                       class="btn btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this address?')">
                        <i class="fas fa-trash-alt me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}
</div>
{% endblock %}