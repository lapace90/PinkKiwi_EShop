{% extends 'base.html.twig' %}

{% block title %}My Addresses - PinkKiwi Boutique{% endblock %}

{% block content %}
<div class="address-page">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold section-title">My Addresses</h1>
            <p class="text-muted">Manage your delivery addresses</p>
        </div>
    </div>

    <!-- Add Address Button -->
    <div class="text-end mb-4">
        <a href="{{ path('add_address') }}" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Add New Address
        </a>
    </div>

    <!-- Addresses List -->
    {% if app.user.addresses|length == 0 %}
        <!-- Empty State -->
        <div class="empty-addresses">
            <div class="empty-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <h3 class="mt-4">No addresses saved yet</h3>
            <p class="text-muted">Add your first delivery address to start shopping</p>
            <a href="{{ path('add_address') }}" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-plus-circle me-2"></i>Add Your First Address
            </a>
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for address in app.user.addresses %}
                <div class="col">
                    <div class="address-card">
                        <!-- Address Name Badge -->
                        <div class="address-badge">
                            <i class="fas fa-tag me-2"></i>{{ address.name }}
                        </div>
                        
                        <!-- Address Content -->
                        <div class="address-content">
                            <h5 class="address-title">
                                <i class="fas fa-user me-2"></i>
                                {{ address.firstName }} {{ address.lastName }}
                            </h5>
                            
                            {% if address.company %}
                                <p class="address-company">
                                    <i class="fas fa-building me-2"></i>{{ address.company }}
                                </p>
                            {% endif %}
                            
                            <div class="address-details">
                                <p class="mb-1">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    {{ address.address }}
                                </p>
                                <p class="mb-1">
                                    <i class="fas fa-city me-2"></i>
                                    {{ address.postal }} - {{ address.city }}
                                </p>
                                <p class="mb-1">
                                    <i class="fas fa-globe me-2"></i>
                                    {{ address.country }}
                                </p>
                                <p class="mb-0">
                                    <i class="fas fa-phone me-2"></i>
                                    {{ address.phone }}
                                </p>
                            </div>
                        </div>
                        
                        <!-- Actions -->
                        <div class="address-actions">
                            <a href="{{ path('address_edit', {'id': address.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a href="{{ path('delete_address', {'id': address.id}) }}" 
                               class="btn btn-outline-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this address?')">
                                <i class="fas fa-trash-alt me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    
    <!-- Back to Account -->
    <div class="text-center mt-5">
        <a href="{{ path('account') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to My Account
        </a>
    </div>
</div>
{% endblock %}