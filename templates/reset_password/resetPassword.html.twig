{% extends 'base.html.twig' %}

{% block title %}Reset Your Password - PinkKiwi{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="auth-card">
                <!-- Logo/Icon -->
                <div class="auth-icon">
                    <i class="fas fa-key"></i>
                </div>
                
                <h2 class="auth-title">Reset Your Password</h2>
                <p class="text-muted text-center mb-4">Enter your email address and we'll send you a link to reset your password.</p>

                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                        <input type="email" 
                               name="email" 
                               id="inputEmail" 
                               class="form-control form-control-lg" 
                               placeholder="your.email@example.com"
                               autocomplete="email" 
                               required 
                               autofocus>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid mb-3">
                        <button class="btn btn-primary btn-lg" type="submit">
                            <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                        </button>
                    </div>

                    <div class="text-center">
                        <a href="{{ path('app_login') }}" class="forgot-link">
                            <i class="fas fa-arrow-left me-1"></i>Back to Login
                        </a>
                    </div>
                </form>

                <hr class="my-4">

                <!-- Create Account Section -->
                <div class="auth-switch">
                    <p class="text-muted mb-2">Don't have an account yet?</p>
                    <a href="{{ path('register') }}" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-user-plus me-2"></i>Create an Account
                    </a>
                </div>
            </div>

            <!-- Help Section -->
            <div class="alert alert-info mt-4">
                <div class="d-flex align-items-start">
                    <i class="fas fa-info-circle me-2 mt-1"></i>
                    <div>
                        <strong>Need help?</strong><br>
                        <small>If you don't receive an email within a few minutes, check your spam folder or <a href="{{ path('contact') }}" class="alert-link">contact us</a>.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}