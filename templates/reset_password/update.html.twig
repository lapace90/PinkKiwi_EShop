{% extends 'base.html.twig' %}

{% block title %}Create New Password - PinkKiwi{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="auth-card">
                {# Logo/Icon #}
                <div class="auth-icon">
                    <i class="fas fa-lock"></i>
                </div>
                
                <h2 class="auth-title">Create New Password</h2>
                <p class="text-muted text-center mb-4">Choose a strong password for your account</p>

                {{ form_start(form) }}
                
                <div class="mb-3">
                    {{ form_row(form.newPassword, {
                        'label': 'New Password',
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'Enter your new password'
                        }
                    }) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.confirmNewPassword, {
                        'label': 'Confirm New Password',
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'Confirm your new password'
                        }
                    }) }}
                </div>

                <div class="d-grid mb-3">
                    {{ form_widget(form.submit, {
                        'label': 'Reset Password',
                        'attr': {'class': 'btn btn-primary btn-lg'}
                    }) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}