{% extends 'base.html.twig' %}

{% block title %}404 - Page Not Found - PinkKiwi{% endblock %}

{% block content %}
<div class="error-page">
    <div class="error-container">
        <div class="error-content text-center">
            {# Error Icon/Illustration #}
            <div class="error-icon mb-4">
                <i class="fas fa-kiwi-bird"></i>
                <div class="error-code">404</div>
            </div>

            {# Error Message #}
            <h1 class="error-title">Oops! Page Not Found</h1>
            <p class="error-description">
                The page you're looking for seems to have flown away like a kiwi bird!<br>
                Don't worry, we'll help you find your way back.
            </p>

            {# Action Buttons #}
            <div class="error-actions">
                <a href="{{ path('home') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
                <a href="{{ path('products') }}" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-shopping-bag me-2"></i>Browse Products
                </a>
            </div>

            {# Search Suggestion #}
            <div class="error-search mt-5">
                <p class="text-muted mb-3">Or try searching for what you need:</p>
                <form action="{{ path('products') }}" method="GET" class="search-form">
                    <div class="search-wrapper">
                        <input type="text" 
                               name="search" 
                               class="form-control form-control-lg" 
                               placeholder="Search for products..."
                               autocomplete="off">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>

            {# Quick Links #}
            <div class="error-links mt-5">
                <h5 class="mb-3">Popular Pages</h5>
                <div class="quick-links">
                    <a href="{{ path('home') }}" class="quick-link">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                    <a href="{{ path('products') }}" class="quick-link">
                        <i class="fas fa-shopping-bag"></i>
                        <span>Products</span>
                    </a>
                    <a href="{{ path('my_cart') }}" class="quick-link">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Cart</span>
                    </a>
                    <a href="{{ path('account') }}" class="quick-link">
                        <i class="fas fa-user"></i>
                        <span>Account</span>
                    </a>
                    <a href="{{ path('contact') }}" class="quick-link">
                        <i class="fas fa-envelope"></i>
                        <span>Contact</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}