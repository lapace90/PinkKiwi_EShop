{% extends 'base.html.twig' %}

{% block carousel %}{% endblock %}

{% block title %}Welcome to PinkKiwi Boutique{% endblock %}

{% block content %}

{# Categories Section #}
{% if categories|length > 0 %}
<div class="section-categories">
    <div class="row mb-5">
        <div class="col-12 text-center mb-5">
            <h2 class="display-5 fw-bold section-title">Shop by Category</h2>
            <p class="text-muted fs-5">Explore our wide range of categories</p>
        </div>
        {% for category in categories|slice(0, 3) %}
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="category-card">
                <div class="category-icon">
                    <i class="fas fa-{{ ['tag', 'shopping-bag', 'gem', 'crown', 'star'][loop.index0 % 5] }}"></i>
                </div>
                <h3 class="text-center">{{ category.name }}</h3>
                <p class="text-center">{{ category.description|slice(0, 100) }}{% if category.description|length > 100
                    %}...{% endif %}</p>
                <div class="text-center mt-3">
                    <a href="{{ path('products') }}" class="btn btn-outline-primary">Discover Products</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}

{# Featured Products Section #}
{% if featuredProducts|length > 0 %}
<div class="section-featured">
    <div class="row mb-5">
        <div class="col-12 text-center mb-5">
            <h2 class="display-5 fw-bold section-title">Featured Products</h2>
            <p class="text-muted fs-5">Hand-picked selection just for you</p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        {% for product in featuredProducts %}
        <div class="col">
            {% include 'components/product_card.html.twig' with {'product': product, 'size': 'large'} %}
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}

{# Latest Products Section #}
{% if latestProducts|length > 0 %}
<div class="section-latest">
    <div class="row mb-5">
        <div class="col-12 text-center mb-5">
            <h2 class="display-5 fw-bold section-title">New Arrivals</h2>
            <p class="text-muted fs-5">Check out our newest products</p>
        </div>
    </div>

    <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 mb-5">
        {% for product in latestProducts %}
        <div class="col">
            {% include 'components/product_card.html.twig' with {'product': product, 'size': 'small'} %}
        </div>
        {% endfor %}
    </div>
    <div class="text-center mb-0">
        <a href="{{ path('products') }}" class="btn btn-lg btn-primary">
            <i class="fas fa-shopping-bag me-2"></i>View All Products
        </a>
    </div>
</div>
{% endif %}

{# Call to Action Section #}
<div class="section-cta">
    <div class="cta-section">
        <div class="row align-items-center">
            <div class="col-lg-8 text-center text-lg-start">
                <h2 class="display-4 fw-bold">Why Choose PinkKiwi?</h2>
                <p class="lead mb-4">
                    <i class="fas fa-check-circle me-2"></i>Premium Quality Products<br>
                    <i class="fas fa-check-circle me-2"></i>Fast & Secure Shipping<br>
                    <i class="fas fa-check-circle me-2"></i>Excellent Customer Service<br>
                    <i class="fas fa-check-circle me-2"></i>Thousands of Satisfied Customers
                </p>
                <a href="{{ path('products') }}" class="btn btn-success btn-lg">
                    <i class="fas fa-rocket me-2"></i>Start Shopping Now
                </a>
            </div>
            <div class="col-lg-4 text-center mt-4 mt-lg-0">
                <div
                    style="background: white; border-radius: 20px; padding: 3rem; box-shadow: 0 10px 40px rgba(0,0,0,0.2);">
                    <i class="fas fa-kiwi-bird" style="font-size: 5rem; color: var(--pink-primary);"></i>
                    <h3 class="mt-3" style="color: var(--dark);">PinkKiwi</h3>
                    <p class="text-muted mb-0">Your Trusted Shop</p>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
