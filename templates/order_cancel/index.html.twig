{% extends 'base.html.twig' %}
{% block title %}Payment Error - My Boutique{% endblock %}
{% block content %}
<h2>Payment Error</h2>
<p>Hello {{ order.user.firstName }} {{ order.user.lastName }}<br><br>
	It seems that your payment failed for order number: {{ order.reference }}<br><br>
	An error confirmation has been sent to the email address: {{ order.user.email }}<br>
</p>
<hr>
<a href="{{ path('order') }}" class="btn btn-success">Retry Payment</a>
{% endblock %}